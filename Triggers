CREATE TABLE personaldata_audit(
	id_personaldata_audit INT AUTO_INCREMENT,
    personaldata_id INT NOT NULL,
    action VARCHAR(50) NOT NULL,
    PRIMARY KEY(id));
	
CREATE TRIGGER personaldata_insert
	AFTER INSERT ON personaldata
	FOR EACH ROW
	INSERT INTO personaldata_audit
	SET 
		id_personal_number = New.id_personal_number,
		action = 'insert';
		
CREATE TRIGGER personaldata_update
	BEFORE UPDATE ON personaldata
    FOR EACH ROW
    INSERT INTO personaldata_audit
    SET
        id_personal_number = OLD.id_personal_number,
		action = 'update';
		
CREATE TRIGGER personaldata_delete
	BEFORE DELETE ON personaldata
    FOR EACH ROW
    INSERT INTO personaldata_audit
    SET
        personaldata_id = OLD.Personaldata_ID,
        action = 'delete';
